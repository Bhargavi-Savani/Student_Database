<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".add_student_intermediate"
    android:background="@color/black">

    <TextView
        android:id="@+id/AD_STUDENT_ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="151dp"
        android:layout_marginEnd="5dp"
        android:text="Student ID"
        android:textColor="@color/green"
        android:textSize="23sp"
        app:layout_constraintEnd_toStartOf="@+id/AD_ID"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ADD_STUDENT" />

    <EditText
        android:id="@+id/AD_ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="141dp"
        android:layout_marginEnd="5dp"
        android:ems="10"
        android:hint="Enter student ID"
        android:inputType="textPersonName"
        android:textColor="@color/green"
        android:textColorHint="@color/green"
        android:textSize="20sp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.388"
        app:layout_constraintStart_toEndOf="@+id/AD_STUDENT_ID"
        app:layout_constraintTop_toBottomOf="@+id/ADD_STUDENT" />

    <TextView
        android:id="@+id/AD_NAME"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="25dp"
        android:text="Name"
        android:textColor="@color/green"
        android:textSize="23sp"
        app:layout_constraintEnd_toStartOf="@+id/AD_S_NAME"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AD_STUDENT_ID" />

    <EditText
        android:id="@+id/AD_S_NAME"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="5dp"
        android:ems="10"
        android:hint="Enter student's name"
        android:inputType="textPersonName"
        android:textColor="@color/green"
        android:textColorHint="@color/green"
        android:textSize="20sp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/AD_NAME"
        app:layout_constraintTop_toBottomOf="@+id/AD_ID" />

    <TextView
        android:id="@+id/ADD_STUDENT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="203dp"
        android:layout_marginBottom="150dp"
        android:text="Add Student"
        android:textColor="@color/green"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/AD_ID"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button3"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="100dp"
        android:backgroundTint="@color/green"
        android:onClick="AD_BUTTON"
        android:text="Add"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:visibility="visible"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AD_S_SEM"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/AD_SEM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="5dp"
        android:text="Semester"
        android:textColor="@color/green"
        android:textSize="23sp"
        app:layout_constraintEnd_toStartOf="@+id/AD_S_SEM"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AD_NAME" />

    <EditText
        android:id="@+id/AD_S_SEM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="6dp"
        android:ems="10"
        android:hint="Enter semester"
        android:inputType="numberSigned"
        android:textColor="@color/green"
        android:textColorHint="@color/green"
        android:textSize="20sp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.785"
        app:layout_constraintStart_toEndOf="@+id/AD_SEM"
        app:layout_constraintTop_toBottomOf="@+id/AD_S_NAME" />

</androidx.constraintlayout.widget.ConstraintLayout>