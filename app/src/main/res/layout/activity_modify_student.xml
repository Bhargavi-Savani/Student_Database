<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".modify_student"
    android:background="@color/black">

    <TextView
        android:id="@+id/MD_COURSE_CODE1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="150dp"
        android:text="Course code"
        android:textColor="@color/green"
        android:textSize="23sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/MD_GRADE1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:text="Grade"
        android:textColor="@color/green"
        android:textSize="23sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MD_COURSE_CODE1" />

    <TextView
        android:id="@+id/MD_COURSE_CODE2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="60dp"
        android:text="Course code"
        android:textColor="@color/green"
        android:textSize="23sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MD_GRADE1" />

    <TextView
        android:id="@+id/MD_GRADE2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:text="Grade"
        android:textColor="@color/green"
        android:textSize="23sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MD_COURSE_CODE2" />

    <TextView
        android:id="@+id/MD_COURSE_CODE3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="60dp"
        android:text="Course code"
        android:textColor="@color/green"
        android:textSize="23sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MD_GRADE2" />

    <TextView
        android:id="@+id/MD_GRADE3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:text="Grade"
        android:textColor="@color/green"
        android:textSize="23sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MD_COURSE_CODE3" />

    <EditText
        android:id="@+id/MD_COURSE_VALUE1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="141dp"
        android:layout_marginEnd="5dp"
        android:ems="10"
        android:hint="Enter course code"
        android:inputType="textPersonName"
        android:textColor="@color/green"
        android:textColorHint="@color/green"
        android:textSize="20sp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/MD_COURSE_CODE1"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/MD_GRADE_VALUE1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="82dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="47dp"
        android:ems="10"
        android:hint="Enter course grade"
        android:inputType="textPersonName"
        android:textColor="@color/green"
        android:textColorHint="@color/green"
        android:textSize="20sp"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/MD_COURSE_VALUE2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/MD_GRADE1"
        app:layout_constraintTop_toBottomOf="@+id/MD_COURSE_VALUE1" />

    <EditText
        android:id="@+id/MD_COURSE_VALUE2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="43dp"
        android:layout_marginEnd="5dp"
        android:ems="10"
        android:hint="Enter course code"
        android:inputType="textPersonName"
        android:textColor="@color/green"
        android:textColorHint="@color/green"
        android:textSize="20sp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/MD_COURSE_CODE2"
        app:layout_constraintTop_toBottomOf="@+id/MD_GRADE_VALUE1" />

    <EditText
        android:id="@+id/MD_COURSE_VALUE3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="5dp"
        android:ems="10"
        android:hint="Enter course code"
        android:inputType="textPersonName"
        android:textColor="@color/green"
        android:textColorHint="@color/green"
        android:textSize="20sp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/MD_COURSE_CODE3"
        app:layout_constraintTop_toBottomOf="@+id/MD_GRADE_VALUE2" />

    <EditText
        android:id="@+id/MD_GRADE_VALUE3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="82dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="5dp"
        android:ems="10"
        android:hint="Enter course grade"
        android:inputType="textPersonName"
        android:textColor="@color/green"
        android:textColorHint="@color/green"
        android:textSize="20sp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/MD_GRADE3"
        app:layout_constraintTop_toBottomOf="@+id/MD_COURSE_VALUE3" />

    <EditText
        android:id="@+id/MD_GRADE_VALUE2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="82dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="5dp"
        android:ems="10"
        android:hint="Enter course grade"
        android:inputType="textPersonName"
        android:textColor="@color/green"
        android:textColorHint="@color/green"
        android:textSize="20sp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/MD_GRADE2"
        app:layout_constraintTop_toBottomOf="@+id/MD_COURSE_VALUE2" />

    <Button
        android:id="@+id/button4"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="54dp"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="70dp"
        android:backgroundTint="@color/green"
        android:onClick="ModifyButton"
        android:text="Modify"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MD_GRADE_VALUE3"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>